{
  "name": "mcp-runtime",
  "version": "0.0.1",
  "description": "TypeScript runtime and CLI for connecting to configured Model Context Protocol servers.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "bin": {
    "mcp-runtime": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "check": "biome check",
    "lint": "pnpm check",
    "test": "vitest run",
    "clean": "rimraf dist",
    "dev": "tsc -w -p tsconfig.build.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@types/node": "^22.7.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steipete/mcp-runtime"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "sweetistics"
  ],
  "author": "Sweetistics",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
